@model OnlineTestManagement.Entities.ViewModels.CandidateViewModel
@{
    ViewData["Title"] = "Add";
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link href="~/css/summernote.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.10/css/bootstrap-select.min.css">
}
<h1>Question</h1>
<div class="row">
    <div class="col-md-6 detail-container">
        <form asp-controller="Candidate" id="form" asp-action="add" autocomplete="off" spellcheck="false" enctype="multipart/form-data">
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label float-label mt-2">Name</label>
                        <input type="text" asp-for="Name" placeholder="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="EmailId" class="control-label float-label mt-2">EmailId</label>
                        <input type="text" asp-for="EmailId" placeholder="EmailId" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="MobileNumber" class="control-label float-label mt-2">MobileNumber</label>
                        <input type="text" asp-for="MobileNumber" placeholder="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label float-label mt-2">Password</label>
                        <input type="text" asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="AppliedFor" class="control-label float-label mt-2">AppliedFor</label>
                        <input type="text" asp-for="AppliedFor" placeholder="AppliedFor" class="form-control" />
                        <span asp-validation-for="AppliedFor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1">
                <div class="col-md-9">
                    <div class="form-group">
                        <label class="float-label">Select Test</label>
                        <div class="my-custom-select width-100">
                            <select class="form-control select-dropDown" asp-for="TestId" value="" asp-items="ViewBag.TestsList">
                                <option value="">select</option>
                            </select>
                        </div>
                        <span asp-validation-for="TestId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="detailBtn-group">
                <button id="btnSubmit" class="btn btn-primary  mr-2">Add</button>
                <a asp-controller="Candidate" asp-action="index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/summernote.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.10/js/bootstrap-select.min.js"></script>
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js"
            type="text/javascript"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>

        $(document).ready(function () {
            $('#Date').datepicker({
            });
        })
    </script>

}

