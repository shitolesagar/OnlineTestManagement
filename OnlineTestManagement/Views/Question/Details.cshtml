@model OnlineTestManagement.Entities.ViewModels.QuestionDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<link href="~/css/site.css" rel="stylesheet" />

<h2 style="color:red;">Question Details</h2>

<div class="row">
    <div class="form-group mt-2 float-container position-relative col-md-12">
        <label class="control-label float-label">Question</label>
        <p class=""> @(Model.Question)</p>
    </div>
</div>
<div class="row">
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label float-label">Option1</label>
        <p class=""> @(Model.Option1)</p>
    </div>
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label float-label">Option2</label>
        <p class=""> @(Model.Option2)</p>
    </div>
</div>
<div class="row">
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label float-label">Option3</label>
        <p class=""> @(Model.Option3)</p>
    </div>
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label mt-2">Option4</label>
        <p class=""> @(Model.Option4)</p>
    </div>
</div>
<div class="row">
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label mt-2">Correct Answer</label>
        <p class=""> @(Model.CorrectAnswer)</p>
    </div>
    @*<div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label mt-2">Created By</label>
        <p class=""> @(Model.CreatedBy)</p>
    </div>*@
</div>
<div class="row">
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label mt-2">Level</label>
        <p class=""> @(Model.Level)</p>
    </div>
    <div class="form-group mt-2 float-container position-relative col-md-6">
        <label class="control-label mt-2">Subject</label>
        <p class=""> @(Model.Subject)</p>
    </div>
</div>

<button type="button" class="col-md-4" style="color:white; background-color:gray" onclick="location.href='@Url.Action("Index","Question")'">Back To Index Page</button>
<link href="~/css/site.css" rel="stylesheet" />

